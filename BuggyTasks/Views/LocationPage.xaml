<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BuggyTasks.Views.LocationPage"
             Title="Location Information">
    <ScrollView Padding="30">
        <VerticalStackLayout>
            <Label Text="Location Information" FontSize="24" FontAttributes="Bold" />
            <Label x:Name="StatusLabel" Text="Getting location..." />
            <Label x:Name="LatitudeLabel" Text="Latitude: --" />
            <Label x:Name="LongitudeLabel" Text="Longitude: --" />
            <Label x:Name="AccuracyLabel" Text="Accuracy: --" />
            <Button Text="Get Current Location" Clicked="OnGetCurrentLocationClicked" />
            <Button Text="Back" Clicked="OnBackClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>