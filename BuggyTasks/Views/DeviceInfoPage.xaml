<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BuggyTasks.Views.DeviceInfoPage"
             Title="Device Info">
    <StackLayout Padding="20" Spacing="10">
        <Label x:Name="ModelLabel" FontSize="18" />
        <Label x:Name="PlatformLabel" FontSize="18" />
        <Label x:Name="VersionLabel" FontSize="18" />
        <Label x:Name="ManufacturerLabel" FontSize="18" />

        <Button Text="Back" Clicked="OnBackButtonClicked" />
    </StackLayout>
</ContentPage>